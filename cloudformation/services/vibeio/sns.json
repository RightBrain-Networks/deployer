{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Description" : "SNS child stack",
  "Parameters" : {
    "Project" : {
      "Description" : "Project Name",
      "Type" : "String",
      "Default" : "",
      "ConstraintDescription" : "must be a string."
    },
    "Environment" : {
      "Description" : "Environment Name",
      "Type" : "String",
      "Default" : "development",
      "ConstraintDescription" : "must be a string."
    }
  },
  "Mappings" : {
  },
  "Resources" : {
    "ApplicationOperations":{
      "Type":"AWS::SNS::Topic",
      "Properties":{
        "DisplayName":{ "Fn::Join": [ "-", [ { "Ref": "Project" }, { "Ref": "Environment" }, "Application-Operations" ] ] },
        "TopicName": { "Fn::Join": [ "-", [ { "Ref": "Project" }, { "Ref": "Environment" }, "Application-Operations" ] ] }
      }
    }
  },
  "Outputs" : {
    "ApplicationOperations":{
      "Description":"ID of new ApplicationOperations",
      "Value": { "Ref":"ApplicationOperations" }
    }
  }
}

